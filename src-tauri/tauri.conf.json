{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "warsztat-gold",
    "version": "1.1.18"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "dialog": {
        "all": true
      },
      "window": {
        "all": false,
        "close": true,
        "create": true,
        "center": true
      },
      "fs": {
        "all": false,
        "exists": true,
        "createDir": true,
        "scope": ["$RESOURCE/*"]
      },
      "clipboard": {
        "all": false,
        "readText": true,
        "writeText": true
      }
    },
    "bundle": {
      "active": true,
      "targets": ["msi","updater"],
      "identifier": "com.tauri.warsztat-gold",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": ["resources/*", "resources/sqlite/*"],
      "windows": {
        "webviewInstallMode": {
          "type": "embedBootstrapper"
        },
        "wix": {
          "language": "pl-PL"
        }
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "warsztat-gold",
        "width": 800,
        "height": 600
      }
    ],
    "updater": {
      "active": true,
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDk2MThCRDQzMjkyQkM1MjYKUldRbXhTc3BRNzBZbHFHN2pXdnc4cC9jKytyeXZpQlZSa3dodU1PUTBmU3BLcEJVTVYvd2R6ZU8K",
      "endpoints": ["https://gold.bieda.it/warsztatgold/updater/"],
      "windows": {
        "installMode": "basicUi"
      }
    }
  }
}
